<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp">
    <EditText
        android:id="@+id/edit_text_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_nombre"/>
    <EditText
        android:id="@+id/edit_text_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_url"/>
    <EditText
        android:id="@+id/edit_text_telefonoContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_telefonoContacto"
        />
    <EditText
        android:id="@+id/edit_text_eMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_eMail"
        />
    <EditText
        android:id="@+id/edit_text_productosServicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_productosServicios"
        />
    <EditText
        android:id="@+id/edit_text_clasificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_clasificacion"
        />
    <Button
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:id="@+id/button_add_update_empresa"
        android:text="@string/texto_addEmpresa"
        android:layout_gravity="center"/>
</LinearLayout>
